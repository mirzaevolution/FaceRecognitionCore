<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:WebEye.Controls.Wpf;assembly=WebEye.Controls.Wpf.WebCameraControl"
             xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:FaceRecognition.GUILayer.Training"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" 
            x:Class="FaceRecognition.GUILayer.Training.TrainingView"
             mc:Ignorable="d" d:DesignWidth="694.487" d:DesignHeight="566.88">
    <i:Interaction.Triggers>
        <i:EventTrigger>
            <ei:CallMethodAction TargetObject="{Binding}" MethodName="LoadSamples"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>

            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Background="#123" LastChildFill="False">
            <Button Height="35" Width="35" DockPanel.Dock="Right" Command="{Binding BackToMainCommand}"
                    Background="Red" control:ButtonHelper.CornerRadius="35" Margin="2" Cursor="Hand">
                <iconPacks:MaterialLight Kind="ArrowLeft"/>
            </Button>
        </DockPanel>
        <Grid Grid.Row="1" x:Name="GridDataRepo" DataContext="{Binding Repository}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Red" BorderThickness="1.5" Margin="10">
                    <wpf:WebCameraControl x:Name="WebCamCoreControl" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <StackPanel Grid.Row="1">
                    <ComboBox x:Name="ComboBoxDevices" DisplayMemberPath="Name" Width="300" Margin="10" SelectionChanged="ComboBoxDevicesSelectionChangedHandler"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ButtonInitialize" Margin="3" Width="80" Click="ButtonInitializeHandler"
                            Content="Initialize" control:ButtonHelper.CornerRadius="10"
                            HorizontalAlignment="Center" BorderBrush="Red" Visibility="Collapsed"/>
                        <Button x:Name="ButtonCapture" Margin="3" Width="80" Click="ButtonCaptureHandler"
                            Content="Capture" control:ButtonHelper.CornerRadius="10"
                            HorizontalAlignment="Center" BorderBrush="Red" IsEnabled="False"/>
                        <Button x:Name="ButtonMultiCapture" Margin="3" Width="120" Click="ButtonMultiCaptureHandler"
                            Content="Multi Capture" control:ButtonHelper.CornerRadius="10"
                            HorizontalAlignment="Center" BorderBrush="Red" IsEnabled="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid  Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Red" BorderThickness="1.5" Margin="5">
                    <Image Name="ImagePreview" Source="{Binding Image}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Grid.Row="0"/>
                    
                </Border>
                <TextBlock Name="TextCounter" Text="1" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent"
                               Foreground="White" Visibility="Collapsed"/>
                <TextBox Text="{Binding Description,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="20,5" control:TextBoxHelper.Watermark="Enter short description" control:TextBoxHelper.ClearTextButton="True" Grid.Row="1"/>
                <WrapPanel Orientation="Horizontal" Grid.Row="2" Name="WrapPanelButtons"
                            DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="7,10,7.4,0" 
                            IsEnabled="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsEnabled}">
                    <Button Content="Save" Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Height="30"
                            Width="66" Margin="4" control:ButtonHelper.CornerRadius="10" BorderBrush="Red"/>
                    <Button Content="Cancel" Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Height="30"
                            Width="66" Margin="4" control:ButtonHelper.CornerRadius="10" BorderBrush="Red"/>
                    <Button Content="Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Height="30"
                            Width="66" Margin="4" control:ButtonHelper.CornerRadius="10" BorderBrush="Red"/>
                    <Button Content="Preview" Command="{Binding DataContext.PreviewImageCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Height="30"
                            Width="66" Margin="4" control:ButtonHelper.CornerRadius="10" BorderBrush="Red"/>
                </WrapPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <ListBox Name="ListBoxImages" ItemsSource="{Binding Repositories,IsAsync=True}" 
                     Margin="10" SelectedItem="{Binding Repository, Mode=TwoWay}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="ListBoxSelectionChangedHandler">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Image}" Margin="5" Height="50" Width="80" HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True" HorizontalAlignment="Center">
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
